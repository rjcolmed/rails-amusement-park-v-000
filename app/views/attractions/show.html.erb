Name: <%= @attraction.name %>
Total Number of Users: <%= @attraction.total_users %>
Ticket Requirement: <%= @attraction.tickets %>
Height Requirement: <%= @attraction.min_height %>
Nausea Rating: <%= @attraction.nausea_rating %>
Happiness Rating: <%= @attraction.happiness_rating %>
<br>
<%= form_tag rides_path, method: :post do %>
  <%= hidden_field_tag :user_id, current_user.id %>
  <%= hidden_field_tag :attraction_id, @attraction.id %>
  <%= submit_tag 'Go on this ride' %>
<% end %>
<%= link_to 'Edit Attraction', edit_attraction_path(@attraction) if is_admin? %>